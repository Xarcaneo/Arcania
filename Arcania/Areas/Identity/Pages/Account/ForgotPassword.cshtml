@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<header><link rel="stylesheet" href="~/css/Identity.css" /></header>

<hr />
<div class="row">
    <div class="card col-md-4">
        <div class="card-header label-background">
            <h2 class="text-white">Forgot your password?</h2>
        </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label" style="margin-bottom: 10px;"></label> <!-- Add margin-bottom here -->
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
