@page
@model ResendEmailConfirmationModel

<header><link rel="stylesheet" href="~/css/Identity.css" /></header>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="card col-md-4">
                <div class="card-header label-background">
                    <h2 class="text-white">Resend confirmation</h2>
                </div>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button id="btn-submit" type="submit" class="btn-submit">Resend</button>
                </form>
            </div>
        </div>
    </div>

    <section>
        <partial name="_ValidationScriptsPartial" />
    </section>
</body>
